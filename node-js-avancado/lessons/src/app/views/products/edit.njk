{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render("Edit product:", "product-create container") %}

    <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">
      <div class="fields">
        {% include "products/fields.njk" %}
        <input type="hidden" name="id" value='{{ product.id }}'>
      </div>
        
      <button class="button edit" type="submit" onclick="Validate.allFields(event)">Atualize</button>

    </form>

    <form id='form-delete' method='POST' action='/products?_method=DELETE'>
      <input type='hidden' name='id' value='{{ product.id }}'>
      <button class="button delete" type="submit">Delete</button>
    </form>

    {% include 'confirm.njk' %}

  {% endcall %}

{% endblock content %}
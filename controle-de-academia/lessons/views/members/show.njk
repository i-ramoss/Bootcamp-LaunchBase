{% extends 'layout.njk' %}

{% block content %}

  <div class='card'>
    <section 
    class='avatar' 
    style='background: url({{ member.avatar_url }}) no-repeat center center / cover'>
    </section>

    <section class='details'>
      <h3>Details</h3>

      <div class="item">
        <div>Member:</div>
        <div>{{ member.name }}</div>
      </div>

      <div class="item">
        <div>Email:</div>
        <div>{{ member.email }}</div>
      </div>
        
      <div class="item">
        <div>Birthday:</div>
        <div>{{ member.birth }}</div>
      </div>
        
      <div class="item">
        <div>Sex:</div>
        <div>{{ 'Female' if member.gender == 'F' else 'Male' }}</div>
      </div>
      
      <div class="item">
        <div>Blood type:</div>
        <div>{{ member.blood }}</div>
      </div>

      <div class="item">
        <div>Weight: (kg)</div>
        <div>{{ member.weight }}</div>
      </div>
      
      <div class="item">
        <div>Height: (cm)</div>
        <div>{{ member.height }}</div>
      </div>
      
      <a href="/members/{{ member.id }}/edit" class="button">Edit</a>
        
    </section>
  </div>

{% endblock content %}
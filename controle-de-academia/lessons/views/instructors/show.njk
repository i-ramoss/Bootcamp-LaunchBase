{% extends 'layout.njk' %}

{% block content %}

  <div class='card'>
    <section 
    class='avatar' 
    style='background: url({{ instructor.avatar_url }}) no-repeat center center / cover'>
    </section>

    <section class='details'>
      <h3>Details</h3>

      <div class="item">
        <div>Instructor:</div>
        <div>{{ instructor.name }}</div>
      </div>
        
      <div class="item">
        <div>Age:</div>
        <div>{{ instructor.age }}</div>
      </div>
        
      <div class="item">
        <div>Sex:</div>
        <div>{{ 'Female' if instructor.gender == 'F' else 'Male' }}</div>
      </div>
      
      <div class="item">
        <div>Line of work:</div>
        <div>
          {% for service in instructor.services %}
            <span>{{ service }}</span>
          {% endfor %}
        </div> 
      </div>
      
      <div class="item">
        <div>Since:</div>
        <div>{{ instructor.created_at }}</div>
      </div>

      <a href="/instructors/{{ instructor.id }}/edit" class="button">Edit</a>
        
    </section>
  </div>

{% endblock content %}
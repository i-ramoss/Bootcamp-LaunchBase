{% extends 'layout.njk' %}%}

{% block content %}

  <form class='card' method='POST' action='/instructors'>
    <section class='avatar'></section>

    <section class='details'>
      <h3>New Instructor</h3>

      <div class='item'>
        <div>Avatar URL:</div>
        <div>
          <input type='url' name='avatar_url' placeholder='https://' >
        </div>
      </div>

      <div class='item'>
        <div>Name:</div>
        <div>
          <input type='text' name='name' placeholder='Enter your name'>
        </div>
      </div>
        
      <div class='item'>
        <div>Date of birth:</div>
        <div>
          <input type='date' name='birth'>
        </div>
      </div>
        
      <div class='item'>
        <div>Sex:</div>
        <div>
          <span><input type='radio' name='gender' value='M'>Male</span>
          <span><input type='radio' name='gender' value='F'>Female</span>
        </div>
      </div>
      
      <div class='item'>
        <div>Occupation area:</div>
        <div>
          <input type='text' name='services' placeholder='Separate the services provided by a comma'>
        </div> 
      </div>

      <button type='submit'>Save</button>
        
    </section>
  </form>

{% endblock content %}
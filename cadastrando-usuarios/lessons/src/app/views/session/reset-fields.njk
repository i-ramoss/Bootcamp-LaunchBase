<div class="item">
  <div>Email:</div>
  <div class="input">
    <input 
      type="email" 
      name="email" 
      placeholder="Enter your email" 
      value="{{ user.email }}"
      onblur="Validate.apply(this, 'isEmail')"
    >
  </div>
</div>

<div class="item">
  <div>Password:</div>
  <div class="input">
    <input 
      type="password" 
      name="password" 
      placeholder="Enter your new password" 
      >
  </div>
</div>

<div class="item">
  <div>Repeat Password:</div>
  <div class="input">
    <input 
      type="password" 
      name="passwordRepeat" 
      placeholder="Repeat your new password" 
      >
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">
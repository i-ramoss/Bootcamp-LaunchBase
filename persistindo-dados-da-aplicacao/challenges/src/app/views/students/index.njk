{% extends 'layout.njk' %}

{% block head %}
  <title>Painel - Private Lessions</title>

  <link rel="stylesheet" href="/styles/index.css">
{% endblock head %}

{% block content %}

<div class='card table-container'>
  <div class="header">
    <a class="button" href="students/create">New</a>

    <form action="/students" method="get">
      <input type="text" name="filter" value="{{ filter }}"placeholder="Filter by name or school year">
      <button type="submit">Filter</button>
    </form>
  </div>

  <table width='100%'>

    <thead>
      <tr>
        <th>Full name:</th>
        <th>Email:</th>
        <th>School year:</th>
        <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      {% for student in students %}
        <tr>
          <td>
            <span style='background-image: url({{ student.avatar_url }})'></span>
            {{ student.name }}
          </td>
          <td>{{ student.email }}</td>
          <td>{{ student.school_year }}</td>
          <td><a href="/students/{{student.id}}">Open</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <div 
  class="pagination"
  data-page={{pagination.page}} 
  data-total={{pagination.total}}
  data-filter={{filter}}
  ></div>
</div>
  
{% endblock content %}
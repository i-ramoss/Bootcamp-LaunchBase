{% extends "layout.njk" %}

{% block content %}
  <section class="shop container">
    <h2>Lastest Products</h2>
    
    <div class="items">
      {% for product in products %}
        <div class="product">
          <div 
            class="image"
            style="background-image: url({{product.img if product.img else '//placehold.it/500x300?text=No-Image'}})"
            >
          </div>
          
            {% if product.oldPrice != product.price %}
              <div class="old-price">{{ product.oldPrice }}</div>
            {% endif %}

            <p>{{ product.price }}</p>
            <h4>{{ product.name }}</h4>

            <a href="/products/{{product.id}}" class="button">View Product</a>
        </div>
      {% endfor %}
    </div>
  </section>

{% endblock content%}